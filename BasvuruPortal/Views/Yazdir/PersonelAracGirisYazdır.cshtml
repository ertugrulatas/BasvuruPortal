
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Personel Araç Giriş Kartı Başvuru Formu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <div>
        <div class="row">
            <div class="col col-md-9">
                <div id="tabley">
                    <table class="table" border="1">
                        <tr style="text-align:center">
                            <td colspan="4">
                                KAYSERİ ÜNİVERSİTESİ
                                <br /> AKADEMİK VE İDARİ PERSONEL İÇİN
                                <br />  ARAÇ GİRİŞ KARTI BAŞVURU FORMU
                            </td>
                        </tr>
                        <tr>
                            <td width="50%" colspan="2" align="center"> <strong>Personel Bilgileri</strong> </td>
                            <td width="50%" colspan="2" align="center"><strong> Araç Bilgileri</strong></td>
                        </tr>
                        <tr>
                            <td width="20%">Başvuru No</td>
                            <td>@Model.ID</td>
                            <td width="20%">Plaka:</td>
                            <td>@Model.Plaka</td>
                        </tr>
                        <tr>
                            <td>Adı Soyadı</td>
                            <td>@Model.AdiSoyadi</td>
                            <td>Marka/Model</td>
                            <td>@Model.AracModeli</td>
                        </tr>
                        <tr>
                            <td>T.C.Kimlik No </td>
                            <td>@Model.TCKimlikNo</td>
                            <td>Model Yılı</td>
                            <td>@Model.ModelYili</td>
                        </tr>
                        <tr>
                            <td>Kurum Sicil No</td>
                            <td>@Model.SicilNo</td>
                            <td>Ruhsat Sahibi</td>
                            <td>@Model.RuhsatSahibi</td>
                        </tr>
                        <tr>
                            <td>Statu</td>
                            @if (Model.statu.status != "Diğer")
                            {
                                <td>@Model.statu.status</td>
                            }
                            else
                            {
                                <td>@Model.StatuDiger</td>
                            }
                            <td>Ruhsat Sahibine Yakınlık</td>
                            <td>@Model.RuhsatSahibiYakinlik</td>
                        </tr>
                        <tr>
                            <td>Uyruğu</td>
                            <td>@Model.uyruk</td>
                            <td>Başvuru Tarihi</td>
                            <td>@Model.BasvuruTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td>Birimi / Bölümü</td>
                            <td>@Model.birimi</td>
                            <td rowspan="4">İmza</td>
                            <td colspan="2" rowspan="4"> </td>
                        </tr>
                        <tr>
                            <td>Mail Adresi</td>
                            <td>@Model.Mailadres</td>
                        </tr>
                        <tr>
                            <td>Cep Telefonu</td>
                            <td>@Model.CepTelefonu</td>

                        </tr>
                        <tr>
                            <td>İş Telefonu</td>
                            <td>@Model.isTelefonu</td>

                        </tr>

                        <tr>
                            <td align="left" colspan="4">
                                - Yardım için bidb@kayseri.edu.tr adresine e-posta gönderebilir veya 10200 numaralı telefonları arayabilirsiniz.
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>
