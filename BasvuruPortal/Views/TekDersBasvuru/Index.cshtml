@model BasvuruPortal.Models.TekDersBasvuru
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">

    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">

                        </div>

                        <h3 class="profile-username text-center">@Model.OgrenciAdi @Model.OgrenciSoyadi</h3>

                        <p class="text-muted text-center">@Model.BolumAdi</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                               Ders Adı: <b>@Model.DersAdi</b> 
                            </li>
                       
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
          
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Tek Ders Sınav Başvurusu</a></li>

                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <!-- Tek ders onayı verdiyse burada onay butonu yerine tek ders başvurusnun yaptoğına dair yazı gelecek -->
                                <div class="post">
                                    <p>@Model.TekDersDonem.TekDersDonemAdi yapılacak olan tek ders sınavına katılmak istiyorum</p>
                                    <p><a href="#" class="btn btn-success"> Onay</a></p> <!--Tek ders tarihleri arası aktif olacak-->
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>




