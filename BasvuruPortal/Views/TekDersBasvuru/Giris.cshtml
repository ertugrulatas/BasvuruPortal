
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_singlePage.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/admin/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">


    <div class="login-box">
        <p>Tek ders sınavına girmeye hak kazananlar giriş yapabilir. </p>
        <!-- /.login-logo -->
        <p style="color:red">@TempData["Mesaj"]</p>

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <h5>Tek Ders Sınav Başvurusu Giriş</h5>
            </div>
            <div class="card-body">


                @*<form action="#">*@
                @using (Html.BeginForm("Giris", "TekDersBasvuru", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                    <div class="input-group mb-3">
                        <input type="text" name="OgrNo" class="form-control" placeholder="Öğrenci Numaranız">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" name="TCKNo" id="TCKNo" class="form-control" placeholder="T.C. Kimlik No">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-id-card"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">

                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }

                @*</form>*@

            </div>
            <!-- /.card-body -->
        </div>

        <!-- /.card -->
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/admin/dist/js/adminlte.min.js"></script>
</body>
</html>


