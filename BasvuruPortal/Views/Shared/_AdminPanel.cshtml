<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/Content/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Content/admin/dist/css/adminlte.min.css">
    @RenderSection("cssfile", required: false)

</head>
<body>
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Ayarlar</a>
            </li>

        </ul>
        <ul class="navbar-nav ml-auto">
            <!-- Messages Dropdown Menu -->
            <!-- Notifications Dropdown Menu -->
            @*<li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">0</span>
                    </a>

                </li>*@
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" href="@Url.Action("Cikis","Account")">
                    <i class="fas fa-sign-out-alt" title="Çıkış"></i>
                </a>
            </li>
        </ul>
    </nav>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="index3.html" class="brand-link">
            <img src="~/images/Kayu-Logo-128x128.png" class="brand-image img-circle elevation-3" style="opacity: .8" />
            @*<img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">*@
            <span class="brand-text font-weight-light">KAYSERİ ÜNİVERSİTESİ</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    @*<img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">*@
                </div>
                <div class="info">
                    <a href="#" class="d-block">@Session["username"]</a>
                </div>
            </div>
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    @if ((Convert.ToInt32(Session["RolID"]) == 1) || (Convert.ToInt32(Session["RolID"]) == 2))
                    {

                        <!-- Sidebar Menu -->

                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                            <a href="@Url.Action("Index","Yonetim")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Ana Sayfa

                                </p>
                            </a>

                        </li>


                        <li class="nav-header">PERSONEL</li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-envelope"></i>
                                <p>
                                    Email
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("MailOnayBekleyenler", "Yonetim")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Başvuru Yapanlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("MailOnaylananlar", "Yonetim")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Onaylananlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>İptal Edilenler</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Araç Giriş Kartı
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("AracBasvuruOnayBekleyenler", "Yonetim")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Başvuru Yapanlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("AracBasvuruOnaylananlar", "Yonetim")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Onaylananlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>İptal Edilenler</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    @if ((Convert.ToInt32(Session["RolID"]) == 1) || (Convert.ToInt32(Session["RolID"]) == 4))
                    {

                        <li class="nav-item">
                            <a href="@Url.Action("bildirimler","isg")" class="nav-link">
                                <i class="fas fa-exclamation-triangle"></i>
                                <p>
                                    İSG Bildirim Formları

                                </p>
                            </a>

                        </li>
                    }

                    @if ((Convert.ToInt32(Session["RolID"]) == 1) || (Convert.ToInt32(Session["RolID"]) == 3))
                    {

                        <li class="nav-item">
                            <a href="@Url.Action("TekdersSinavi","Ogrisl")" class="nav-link">
                                <i class="fas fa-exclamation-triangle"></i>
                                <p>
                                    Tek Ders Sınavı

                                </p>
                            </a>

                        </li>
                    }
                    @if ((Convert.ToInt32(Session["RolID"]) == 1) || (Convert.ToInt32(Session["RolID"]) == 5))
                    {

                        <li class="nav-item">
                            <a href="@Url.Action("Kaysembasvurular","OnlineBasvuru")" class="nav-link">
                                <i class="fas fa-exclamation-triangle"></i>
                                <p>
                                    KAYSEM Başvuruları
                                </p>
                            </a>

                        </li>
                    }

                </ul>
            </nav>

            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Bilgi İşlem Daire Başkanlığı </b>
        </div>
        <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.kayseri.edu.tr">Kayseri Üniversitesi</a>.</strong>
    </footer>
    <script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Content/admin/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Content/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/admin/plugins/moment/moment.min.js"></script>
    <script src="~/Content/admin/plugins/daterangepicker/daterangepicker.js"></script>

    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Content/admin/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/Content/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <!-- AdminLTE App -->
    <script src="~/Content/admin/dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/admin/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    @RenderSection("modal", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
