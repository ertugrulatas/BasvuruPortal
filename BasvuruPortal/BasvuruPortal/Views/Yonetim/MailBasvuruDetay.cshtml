@model BasvuruPortal.Models.PersonelEmail
@{
    ViewBag.Title = "Mail Başvuru Detayları";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
@section cssfile{
    @{
        Html.RenderPartial("../PartialViews/formCss");
    }
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>MAİL BAŞVURU DETAY</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">

            <div class="card-header">
                <h3 class="card-title">Başvuruyu Yapan </h3>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            Başvuru No :
                        </div>
                        <div class="form-group">
                            Mail Adresi :
                        </div>
                        <div class="form-group">
                            Adı Soyadı :
                        </div>
                        <div class="form-group">
                            Sicil No :
                        </div>
                        <div class="form-group">
                            Statu :
                        </div>

                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.DisplayFor(x => x.ID)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.MailAdresi)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.AdiSoyadi)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.SicilNo)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.statu.status)
                        </div>

                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            TC Kimlik No :
                        </div>
                        <div class="form-group">
                            Cep Telefonu :
                        </div>
                        <div class="form-group">
                            Uyruğu :
                        </div>
                        <div class="form-group">
                            Birimi :
                        </div>
                        <div class="form-group">
                            Unvanı :
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.DisplayFor(x => x.TCKimlikNo)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.CepTelefonu)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.uyruk)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.birimi)
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.Unvan)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Onaylama Bilgileri </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            Onaylayan:
                        </div>
                        <div class="form-group">
                            Başvuru formu
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.DisplayFor(x => x.OnaylanayanKisi)
                        </div>
                        <div class="form-group">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            Onay Tarihi :
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.DisplayFor(x => x.OnayTarihi))
                        </div>
                    </div>
                </div>
                @if (Model.formimage != null)
                {
                    <div class="row">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.formimage)" class="img-fluid mb-2" alt="white sample" />
                    </div>
                }

                <a href="@Url.Action("MailOnaylananlar","Yonetim")" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Geri Dön</a>
            </div>
        </div>
    </div>
</section>

@section scripts{
    @{
        Html.RenderPartial("../PartialViews/formScript");
        Html.RenderPartial("../PartialView/_adminpanel");
    }

}


